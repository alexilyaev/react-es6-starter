{
  "root": true,

  "plugins": [
    "react",
    "babel"
  ],

  "extends": ["eslint:recommended", "plugin:react/recommended"],

  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true,
    "commonjs": true,
    "node": true
  },

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "rules": {
    // Warning
    "max-len": [1, { "code": 100, "ignoreUrls": true }],
    "no-console": 1,
    "no-debugger": 1,
    "no-unreachable": 1,
    "no-unused-vars": [1, { "vars": "all", "args": "after-used" }],
    "newline-after-var": [1, "always"],
    "operator-linebreak": [1, "after", { "overrides": { "?": "before", ":": "before" } }],
    "newline-before-return": 1,
    "prefer-arrow-callback": 1,
    "prefer-const": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-multi-spaces": [1, {
      "exceptions": {
        "VariableDeclarator": true,
        "ImportDeclaration": true,
        "ImportSpecifier": true,
        "AssignmentExpression": true,
        "ClassProperty": true
      }
    }],
    "key-spacing": [1, { "mode": "strict" }],
    "no-warning-comments": [1, { "terms": ["fixme", "todo", "hack", "review", "xxx"] }],
    "eol-last": 1,
    "no-trailing-spaces": 1,
    "semi": [1, "always"],
    "no-multiple-empty-lines": [1, { "max": 1 }],

    "strict": [1, "never"],
    "indent": [1, 2, { "SwitchCase": 1 }],
    "quotes": [1, "single", { "allowTemplateLiterals": true }],
    "linebreak-style": [1, "unix"],
    "no-else-return": 1,
    "brace-style": [1, "stroustrup", { "allowSingleLine": false }],
    "curly": [1, "all"],
    "object-curly-spacing": [1, "always"],
    "arrow-parens": [1, "always"],
    "space-before-blocks": [1, "always"],
    "arrow-spacing": 1,
    "keyword-spacing": 1,
    "no-inline-comments": 1,
    "spaced-comment": [1, "always", { "exceptions": ["-"] }],
    "no-nested-ternary": 1,
    "no-unneeded-ternary": [1, { "defaultAssignment": false }],
    "no-var": 1,
    "eqeqeq": [1, "always"],
    "no-return-assign": 1,
    "no-multi-str": 1,

    // React

    // Disabled
    "react/react-in-jsx-scope": 0,

    // Warning
    "react/jsx-curly-spacing": [1, "always"],
    "react/prop-types": 1
  }
}
