{
  "root": true,

  "plugins": [
    "react",
    "babel",
    "compat"
  ],

  "extends": ["eslint:recommended", "plugin:react/recommended"],

  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true,
    "commonjs": true,
    "node": true
  },

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "rules": {
    // Warning
    "max-len": [1, { "code": 100, "ignoreUrls": true }],
    "no-console": 1,
    "no-debugger": 1,
    "no-unreachable": 1,
    "no-unused-vars": [1, { "vars": "all", "args": "after-used" }],
    "newline-after-var": [1, "always"],
    "operator-linebreak": [1, "after", { "overrides": { "?": "before", ":": "before" } }],
    "newline-before-return": 1,
    "prefer-arrow-callback": 1,
    "prefer-const": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-multi-spaces": [1, {
      "exceptions": {
        "VariableDeclarator": true,
        "ImportDeclaration": true,
        "ImportSpecifier": true,
        "AssignmentExpression": true,
        "ClassProperty": true
      }
    }],
    "key-spacing": [1, { "mode": "strict" }],
    "no-warning-comments": [1, { "terms": ["fixme", "todo", "hack", "review", "xxx"] }],
    "eol-last": 1,
    "no-trailing-spaces": 1,
    "semi": [1, "always"],
    "no-multiple-empty-lines": [1, { "max": 1 }],
    "no-useless-constructor": 1,

    "strict": [1, "never"],
    "indent": [1, 2, { "SwitchCase": 1 }],
    "quotes": [1, "single", { "allowTemplateLiterals": true }],
    "linebreak-style": [1, "unix"],
    "no-else-return": 1,
    "brace-style": [1, "stroustrup", { "allowSingleLine": false }],
    "curly": [1, "all"],
    "object-curly-spacing": [1, "always"],
    "arrow-parens": [1, "always"],
    "space-before-blocks": [1, "always"],
    "arrow-spacing": 1,
    "keyword-spacing": 1,
    "no-inline-comments": 1,
    "spaced-comment": [1, "always", { "exceptions": ["-"] }],
    "no-nested-ternary": 1,
    "no-unneeded-ternary": [1, { "defaultAssignment": false }],
    "no-var": 1,
    "eqeqeq": [1, "always"],
    "no-return-assign": 1,
    "no-multi-str": 1,

    // React

    // Disabled
    "react/forbid-elements": 0,
    "react/forbid-prop-types": [0, { "forbid": ["any", "array", "object"] }],
    "react/no-array-index-key": 0,
    "react/no-danger": 0,
    "react/no-set-state": 0,
    "react/prop-types": 0,
    "react/require-default-props": 0,
    "react/sort-prop-types": 0,
    "react/require-optimization": 0,
    "react/style-prop-object": 0,

    "react/jsx-curly-spacing": [0, "always", { "allowMultiline": true }],
    "react/jsx-first-prop-new-line": 0,
    "react/jsx-handler-names": 0,
    "react/jsx-indent-props": [0, 2],
    "react/jsx-key": 0,
    "react/jsx-max-props-per-line": 0,
    "react/jsx-no-comment-textnodes": 0,
    "react/jsx-no-literals": 0,
    "react/jsx-sort-props": 0,

    // Warning
    "react/forbid-component-props": [1, { "forbid": ["className", "style"] }],
    "react/forbid-foreign-prop-types": 1,
    "react/no-children-prop": 1,
    "react/no-danger-with-children": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-will-update-set-state": 1,
    "react/no-multi-comp": [1, { "ignoreStateless": true }],
    "react/no-string-refs": 1,
    "react/no-unescaped-entities": 1,
    "react/no-unused-prop-types": 1,
    "react/prefer-es6-class": [1, "always"],
    "react/prefer-stateless-function": [1, { "ignorePureComponents": true }],
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": [1, {
      "order": [
        "static-methods",
        "lifecycle",
        "/^on.+$/",
        "/^(get|set)(?!(InitialState$|DefaultProps$|ChildContext$)).+$/",
        "everything-else",
        "/^render.+$/",
        "render"
      ]
    }],
    "react/void-dom-elements-no-children": 1,

    "react/jsx-boolean-value": [1, "never"],
    "react/jsx-closing-bracket-location": [1, "line-aligned"],
    "react/jsx-equals-spacing": [1, "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-indent": [1, 2],
    "react/jsx-no-bind": [1, {
      "ignoreRefs": true,
      "allowArrowFunctions": true
    }],
    "react/jsx-no-target-blank": 1,
    "react/jsx-pascal-case": 1,
    "react/jsx-tag-spacing": [1, {
      "closingSlash": "never",
      "beforeSelfClosing": "always",
      "afterOpening": "never"
    }],
    "react/jsx-wrap-multilines": [1, {
      "declaration": false,
      "assignment": false,
      "return": true
    }],

    // eslint-plugin-compat
    "compat/compat": 1
  }
}
